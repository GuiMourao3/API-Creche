<form action="/vagasEdit" method="POST" enctype="multipart/formdata">
    <input type="hidden" name="id" value="{{animal._id}}">

    <p>Nome: <input type="text" name="nome" id="nomeanimal"
    value="{{animal.nome}}"></p>

    <p>Proprietario:<input type="text" name="proprietario" id="nomeproprietario"
    value="{{animal.proprietario}}"></p> 

    <p>Endereco:<input type="text" name="endereco" id="endereco"
    value="{{animal.endereco}}"></p> 

    <p> Tipo:  <input type="tipo"  id="tipo"
    name="tipo"
    value="{{animal.tipo}}"></p>

    <p> Raca: <input type="teste"  id="raca"
    name="raca"
    value="{{animal.raca}}"></p> 
    <p>Imagem do Anima:</p>
    <input type="file" name="{{animal.imagem}}" >

    <br><br>
    <input type="submit" value="Editar">
</form>